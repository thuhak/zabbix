<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2021-07-10T02:01:30Z</date>
    <groups>
        <group>
            <name>Templates/Applications</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template Infiniband interface</template>
            <name>Template Infiniband interface</name>
            <groups>
                <group>
                    <name>Templates/Applications</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Network</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>ib 每秒发包等待率</name>
                    <type>CALCULATED</type>
                    <key>ib.sendwait</key>
                    <value_type>FLOAT</value_type>
                    <units>%</units>
                    <params>last(PortXmitWaitps)*100/((last(PortXmitWaitps))+last(PortXmitPktsps) + 0.01)</params>
                    <description>每分钟等待发送/(发送+每秒等待发送)</description>
                    <applications>
                        <application>
                            <name>Network</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{min(#5)}&gt;{$IB_WAIT_PERCENT}</expression>
                            <name>{HOST.NAME} infiband网络拥塞</name>
                            <priority>WARNING</priority>
                            <description>因为ib流控导致无法发送的数据包占总发送量比超过{$IB_WAIT_PERCENT}%</description>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>InfiBand Raw</name>
                    <key>infiband.counter</key>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <description>https://community.mellanox.com/s/article/infiniband-port-counters</description>
                    <applications>
                        <application>
                            <name>Network</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>ib 每秒接收数据</name>
                    <type>DEPENDENT</type>
                    <key>PortRcvDataps</key>
                    <delay>0</delay>
                    <value_type>FLOAT</value_type>
                    <units>Bps</units>
                    <applications>
                        <application>
                            <name>Network</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$[&quot;PortRcvData&quot;]</params>
                        </step>
                        <step>
                            <type>MULTIPLIER</type>
                            <params>0.0667</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>infiband.counter</key>
                    </master_item>
                </item>
                <item>
                    <name>ib 每秒接收错包</name>
                    <type>DEPENDENT</type>
                    <key>PortRcvErrorsps</key>
                    <delay>0</delay>
                    <value_type>FLOAT</value_type>
                    <applications>
                        <application>
                            <name>Network</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$[&quot;PortRcvErrors&quot;]</params>
                        </step>
                        <step>
                            <type>MULTIPLIER</type>
                            <params>0.0167</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>infiband.counter</key>
                    </master_item>
                </item>
                <item>
                    <name>ib 每秒收包</name>
                    <type>DEPENDENT</type>
                    <key>PortRcvPktsps</key>
                    <delay>0</delay>
                    <value_type>FLOAT</value_type>
                    <applications>
                        <application>
                            <name>Network</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$[&quot;PortRcvPkts&quot;]</params>
                        </step>
                        <step>
                            <type>MULTIPLIER</type>
                            <params>0.0167</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>infiband.counter</key>
                    </master_item>
                </item>
                <item>
                    <name>ib 每秒发送数据</name>
                    <type>DEPENDENT</type>
                    <key>PortXmitDataps</key>
                    <delay>0</delay>
                    <value_type>FLOAT</value_type>
                    <units>Bps</units>
                    <applications>
                        <application>
                            <name>Network</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$[&quot;PortXmitData&quot;]</params>
                        </step>
                        <step>
                            <type>MULTIPLIER</type>
                            <params>0.0667</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>infiband.counter</key>
                    </master_item>
                </item>
                <item>
                    <name>ib 每秒发包丢包</name>
                    <type>DEPENDENT</type>
                    <key>PortXmitDiscardsps</key>
                    <delay>0</delay>
                    <value_type>FLOAT</value_type>
                    <applications>
                        <application>
                            <name>Network</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$[&quot;PortXmitDiscards&quot;]</params>
                        </step>
                        <step>
                            <type>MULTIPLIER</type>
                            <params>0.0167</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>infiband.counter</key>
                    </master_item>
                </item>
                <item>
                    <name>ib 每秒发包</name>
                    <type>DEPENDENT</type>
                    <key>PortXmitPktsps</key>
                    <delay>0</delay>
                    <value_type>FLOAT</value_type>
                    <applications>
                        <application>
                            <name>Network</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$[&quot;PortXmitPkts&quot;]</params>
                        </step>
                        <step>
                            <type>MULTIPLIER</type>
                            <params>0.0167</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>infiband.counter</key>
                    </master_item>
                </item>
                <item>
                    <name>ib 每秒发送等待</name>
                    <type>DEPENDENT</type>
                    <key>PortXmitWaitps</key>
                    <delay>0</delay>
                    <value_type>FLOAT</value_type>
                    <applications>
                        <application>
                            <name>Network</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$[&quot;PortXmitWait&quot;]</params>
                        </step>
                        <step>
                            <type>MULTIPLIER</type>
                            <params>0.0167</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>infiband.counter</key>
                    </master_item>
                </item>
            </items>
            <macros>
                <macro>
                    <macro>{$IB_WAIT_PERCENT}</macro>
                    <value>90</value>
                </macro>
            </macros>
        </template>
    </templates>
    <triggers>
        <trigger>
            <expression>{Template Infiniband interface:PortRcvErrorsps.min(#2)}&gt;0 or {Template Infiniband interface:PortXmitDiscardsps.min(#2)}&gt;0</expression>
            <name>{HOST.NAME} infiband错包丢包</name>
            <priority>AVERAGE</priority>
        </trigger>
    </triggers>
    <graphs>
        <graph>
            <name>{HOST.NAME} ib读写流量</name>
            <graph_items>
                <graph_item>
                    <color>1A7C11</color>
                    <item>
                        <host>Template Infiniband interface</host>
                        <key>PortXmitDataps</key>
                    </item>
                </graph_item>
                <graph_item>
                    <sortorder>1</sortorder>
                    <color>F63100</color>
                    <item>
                        <host>Template Infiniband interface</host>
                        <key>PortRcvDataps</key>
                    </item>
                </graph_item>
            </graph_items>
        </graph>
    </graphs>
</zabbix_export>
